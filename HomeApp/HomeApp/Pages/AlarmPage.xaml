<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeApp.Pages.AlarmPage">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout">
            <Label x:Name="pickerText" Text="Напряжение сети, В" FontSize="Medium" />
            <Picker x:Name="picker" Title="Повторять будильник?" >
                <Picker.Items>
                    <x:String>Да</x:String>
                    <x:String>Нет</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>